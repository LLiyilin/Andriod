<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bar_selector_white">

    <TableLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_c1"
        tools:context="com.example.vijoz.game.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginBottom="10dp" />

        <TableRow>

            <TextView />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/user"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="帐号： "
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:background="@drawable/bg_round_white"
                android:hint="请输入帐号"
                android:lines="1"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#5f5f5f" />
        </TableRow>

        <TableRow>

            <TextView />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="密码： "
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:background="@drawable/bg_round_white"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#5f5f5f" />
        </TableRow>

        <TableRow>

            <TextView />
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/remember_button"
                android:layout_width="wrap_content"
                style="@style/CustomCheckBoxStyle"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/remember_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="记住密码"
                android:textSize="15sp" />
        </TableRow>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="20dp"
            android:text="登录"
            android:textColor="#333"
            android:textSize="16sp" />


    </TableLayout>


    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:text="退出"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:text="注册"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#efefef"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>

